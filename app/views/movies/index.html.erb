<div class="container">
  <div class="row">
    <div class="col">
      <div class="vh-100 d-flex w-100 align-items-center justify-content-center" data-controller='hello'>
        <button data-hello-target='button' data-action='click->hello#updateText'>
          Click me
        </button>
      </div>

      <h1 class="h2 my-3 d-flex justify-content-center">Movies to watch üçø</h1>

      <div data-controller='search-movies'>
        <%= form_with url: movies_path, method: :get, html: { class: 'mb-4' }, data: {search_movies_target: 'form'} do |f| %>
          <%= f.text_field :query,
                           class: "form-control",
                           placeholder: 'Type a movie title',
                           value: params[:query],
                           data: { search_movies_target: 'input', action: 'keyup->search-movies#updateList'}
                           %>
        <% end %>

        <%= render 'list', movies: @movies %>
      </div>
    </div>
  </div>
</div>
